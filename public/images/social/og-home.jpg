<svg width="1200" height="630" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0f0f0f;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#171717;stop-opacity:1" />
    </linearGradient>
    <filter id="blur" x="0" y="0" width="100%" height="100%">
      <feGaussianBlur in="SourceGraphic" stdDeviation="8"/>
    </filter>
  </defs>
  
  <!-- Dark gradient background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Atom visualization -->
  <g transform="translate(600,315)">
    <!-- Orbital shells -->
    <circle r="120" fill="none" stroke="#525252" stroke-width="2" opacity="0.6"/>
    <circle r="180" fill="none" stroke="#525252" stroke-width="2" opacity="0.4"/>
    <circle r="240" fill="none" stroke="#525252" stroke-width="2" opacity="0.3"/>
    
    <!-- Nucleus -->
    <circle r="30" fill="#ffffff" stroke="#171717" stroke-width="3"/>
    <text x="0" y="8" text-anchor="middle" font-family="system-ui, -apple-system, sans-serif" font-size="28" font-weight="700" fill="#171717">A</text>
    
    <!-- Electrons -->
    <circle cx="120" cy="0" r="12" fill="#ffffff" stroke="#171717" stroke-width="2"/>
    <circle cx="-90" cy="127" r="12" fill="#ffffff" stroke="#171717" stroke-width="2"/>
    <circle cx="0" cy="-180" r="12" fill="#ffffff" stroke="#171717" stroke-width="2"/>
    <circle cx="169" cy="-169" r="12" fill="#ffffff" stroke="#171717" stroke-width="2"/>
    <circle cx="-200" cy="100" r="12" fill="#ffffff" stroke="#171717" stroke-width="2"/>
  </g>
  
  <!-- Text content -->
  <text x="600" y="100" text-anchor="middle" font-family="system-ui, -apple-system, sans-serif" font-size="64" font-weight="700" fill="#ffffff">Arthur Kowskii</text>
  <text x="600" y="160" text-anchor="middle" font-family="system-ui, -apple-system, sans-serif" font-size="32" font-weight="400" fill="#cccccc">Interactive Portfolio</text>
  
  <text x="600" y="540" text-anchor="middle" font-family="system-ui, -apple-system, sans-serif" font-size="24" font-weight="400" fill="#888888">Music Production • Game Audio • Technical Projects</text>
</svg>