---
import { getCollection } from 'astro:content';

// Get bio data from Astro content collections
let bioData = null;
try {
  const bioEntries = await getCollection('bio');
  if (bioEntries.length > 0) {
    const bioEntry = bioEntries[0];
    bioData = {
      title: bioEntry.data.title,
      subtitle: bioEntry.data.subtitle,
      bio: bioEntry.data.bio,
      email: bioEntry.data.email,
      skills: bioEntry.data.skills || [],
      social: bioEntry.data.social || []
    };
  }
} catch (error) {
  console.log('Could not load bio content:', error.message);
}
