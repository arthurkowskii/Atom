    <script type="module">
      import { attachValidation, ValidationRules } from '../utils/validation.js';
      
      // Add input validation even for readonly fields
      document.addEventListener('DOMContentLoaded', () => {
        const form = document.querySelector('form');
        if (form) {
          // Define field validation rules
          const fieldRules = {
            title: 'text',
            subtitle: 'text', 
            bio: 'bio',
            email: 'email'
          };
          
          // Attach validation
          attachValidation(form, fieldRules);
          
          // Add CSP violation reporting
