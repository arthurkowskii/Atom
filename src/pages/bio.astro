---
import { getEntryBySlug } from 'astro:content';
import BioBento from '../components/BioBento.astro';

const entry = await getEntryBySlug('bio', 'about');
const data = entry?.data || {};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Enhanced Content Security Policy with YouTube and SoundCloud support -->
    <meta http-equiv="Content-Security-Policy" content="
      default-src 'self';
      script-src 'self' 'unsafe-inline' https://*.youtube.com https://*.soundcloud.com;
      style-src 'self' 'unsafe-inline' https://*.youtube.com https://*.soundcloud.com;
      img-src 'self' data: https: blob: https://*.arthurkowskii.com https://*.youtube.com https://*.ytimg.com https://*.googlevideo.com https://*.soundcloud.com https://*.sndcdn.com;
      media-src 'self' data: blob: https://*.arthurkowskii.com https://*.youtube.com https://*.googlevideo.com https://*.soundcloud.com https://*.sndcdn.com;
      font-src 'self' data: https://fonts.gstatic.com;
      connect-src 'self' https://*.youtube.com https://*.googlevideo.com https://*.soundcloud.com;
      child-src 'none';
      frame-src 'self' https://www.youtube.com/embed https://www.youtube-nocookie.com/embed https://player.vimeo.com https://open.spotify.com https://w.soundcloud.com;
      object-src 'none';
      base-uri 'self';
      form-action 'none';
      frame-ancestors 'none';
      upgrade-insecure-requests;
    ">
    
    <title>Bio â€” Arthur Kowskii</title>
    <style>
      :root { --bg:#fff; --fg:#000; }
      * { box-sizing: border-box; }
      body { margin:0; background:#fff; color:#000; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, system-ui, sans-serif; }
      a { color: inherit; text-decoration: none; }

      /* Professional dark theme base for bio page */
      html[data-theme="dark"] body { 
        background: #0f0f0f; 
        color: #e4e4e7; 
      }
    </style>
    <!-- Theme init (before paint) -->
    <script>
      (function(){
        try {
          const saved = localStorage.getItem('theme');
          const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
          const theme = saved || (prefersDark ? 'dark' : 'light');
          document.documentElement.setAttribute('data-theme', theme);
        } catch {}
      })();
    </script>
  </head>
  <body>
    <BioBento data={data} />
  </body>
  </html>
