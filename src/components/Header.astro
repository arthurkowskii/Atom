---
// Header component with name, project filters, and theme toggle
---

<header id="main-header">
  <div class="header-content">
    <!-- Name (left) -->
    <div class="header-name">
      <h1>Arthur Kowskii</h1>
    </div>
    
    <!-- Project filters (center) -->
    <nav class="header-filters">
      <button class="filter-btn active" data-filter="all">All</button>
      <button class="filter-btn" data-filter="music">Music</button>
      <button class="filter-btn" data-filter="game-audio">Game Audio</button>
      <button class="filter-btn" data-filter="tech">Tech</button>
    </nav>
    
    <!-- Empty space (right) to maintain filter centering -->
    <div></div>
  </div>
</header>

<style>
  #main-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9998; /* Below overlay but above everything else */
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    padding: 16px 24px;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }
  
  /* Dark mode header */
  html[data-theme="dark"] #main-header {
    background: rgba(15, 15, 15, 0.95);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  /* Hide header during overlay */
  #main-header.hidden {
    transform: translateY(-100%);
    opacity: 0;
  }
  
  .header-content {
    max-width: 100%;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 24px;
  }
  
  /* Name styling (left) */
  .header-name h1 {
    font-size: 24px;
    font-weight: 700;
    margin: 0;
    color: #171717;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  html[data-theme="dark"] .header-name h1 {
    color: #f4f4f5;
  }
  
  /* Filter navigation (center) */
  .header-filters {
    display: flex;
    gap: 8px;
    align-items: center;
    justify-self: center;
  }
  
  .filter-btn {
    padding: 8px 16px;
    border: 1px solid #e5e5e5;
    border-radius: 20px;
    background: transparent;
    color: #525252;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  .filter-btn:hover {
    border-color: #171717;
    color: #171717;
  }
  
  .filter-btn.active {
    background: #171717;
    border-color: #171717;
    color: #fff;
  }
  
  /* Dark mode filters */
  html[data-theme="dark"] .filter-btn {
    border-color: #525252;
    color: #a1a1aa;
  }
  
  html[data-theme="dark"] .filter-btn:hover {
    border-color: #f4f4f5;
    color: #f4f4f5;
  }
  
  html[data-theme="dark"] .filter-btn.active {
    background: #f4f4f5;
    border-color: #f4f4f5;
    color: #171717;
  }
  
  /* Remove iOS/Android tap highlight */
  .filter-btn {
    -webkit-tap-highlight-color: transparent;
  }
  .filter-btn:focus,
  .filter-btn:focus-visible {
    outline: none !important;
    box-shadow: none !important;
  }
  
  /* Responsive design */
  @media (max-width: 768px) {
    #main-header {
      padding: 12px 16px;
    }
    
    .header-name h1 {
      font-size: 20px;
    }
    
    .filter-btn {
      padding: 6px 12px;
      font-size: 13px;
    }
    
  }
  
  @media (max-width: 600px) {
    .header-filters {
      gap: 4px;
    }
    
    .filter-btn {
      padding: 6px 10px;
      font-size: 12px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Blur filter buttons on click to avoid highlight sticking
    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.addEventListener('click', () => { try { btn.blur(); } catch {} });
    });
  });
</script>
</header>
